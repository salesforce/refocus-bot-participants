{
  "name": "Participants-Bot",
  "displayName": "Participants",
  "version": "1.2.0",
  "description": "This is a refocus room bot that will show all the users in the current room and assign different hats",
  "url": "https://github.com/salesforce/refocus-bot-participants/",
  "scripts": {
    "start-ui": "webpack-dev-server --open",
    "start": "npm run build-ui && node index.js",
    "build-ui": "webpack --config webpack.config.js",
    "lint": "eslint --ext=js --ext=jsx .",
    "postinstall": "npm run build-ui",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha tests/*",
    "test": "npm run lint && mocha --recursive tests/* && npm run coverage",
    "test-dev": "nodemon --ext js --watch ./ --exec 'mocha ./test'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@salesforce/refocus-bdk": "^1.10.0",
    "chai": "^4.0.2",
    "dotenv": "4.0.0",
    "dotenv-webpack": "1.5.4",
    "express": "^4.16.4",
    "husky": "^0.14.3",
    "lodash": "^4.17.4",
    "mocha": "^6.2.2",
    "moment": "^2.24.0",
    "path": "^0.12.7",
    "prop-types": "^15.7.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-html-parser": "^1.0.3",
    "react-select": "^1.0.1",
    "serialize-javascript": "^4.0.0",
    "sinon": "^2.3.7",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "superagent": "^3.6.0"
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "es2015",
      "stage-0"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.22.0",
    "css-loader": "^2.1.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.17.0",
    "html-webpack-plugin": "^2.28.0",
    "istanbul": "^0.4.5",
    "style-loader": "^0.18.2",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.1.2",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.11.5",
    "zip-webpack-plugin": "2.0.0"
  },
  "metadata": {
    "actions": [],
    "data": [],
    "settings": [
      {
        "key": "participantsRoles",
        "helpText": "This is an array of objects of roles that you may want to assign in a room. Each object contains a name, label, order."
      }
    ]
  }
}
